{
  "files": [
    "src/index.ts",
    "src/indexer_backend.ts",
    "src/indexer_worker.ts",
    "src/prehistory.ts",
    "src/decs.d.ts",
    "src/data_migrations/2021-12-02-event.ts",
    "src/data_migrations/2021-12-14-empty-blocks.ts",
  ],
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2021",
    "module": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "isolatedModules": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "typedocOptions": {
    "entryPoints": ["index.ts"],
    "includeVersion": false,
    "hideGenerator": true
  }
}
